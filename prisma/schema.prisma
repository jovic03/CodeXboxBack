generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Jogo {
  id                 String @id @default(uuid())
  title              String @unique
  coverImageUrl      String @map("cover_image_url")
  description        String
  year               String
  imdbScore          String @map("imdb_score")
  trailerYouTubeUrl  String @map("trailer_you_tubeUrl")
  gameplayYouTubeUrl String

  genero Genero[]

  Profiles Profiles[]

  jogoFavorito JogosFavoritos[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")



  @@map("jogo")
}

model Genero {
  id     String @id @default(uuid())
  genero String @unique @map("genero")

  jogos Jogo[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("genero")
}

model User {
  id       String  @id @default(uuid())
  name     String  @unique
  email    String  @unique
  password String
  cpf      String  @unique
  isAdmin  Boolean @default(false) @map("is_admin")

  Profiles Profiles[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")


  @@map("user")
}

model Profiles {
  id       String @id @default(uuid())
  title    String @unique
  ImageURL String @map("image_url")

  User   User   @relation(fields: [userId], references: [id])
  userId String @map("user_id")

  jogos Jogo[]

  jogoFavorito JogosFavoritos[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")


  @@map("profiles")
}

model JogosFavoritos {
  id String @id @default(uuid())

  profile  Profiles @relation(fields: [perfilId], references: [id])
  perfilId String   @map("perfil_id")

  jogo   Jogo   @relation(fields: [jogoId], references: [id])
  jogoId String @map("jogo_id")


  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")


  @@unique([perfilId, jogoId])
  @@map("jogos_favoritos")
}

